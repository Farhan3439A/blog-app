<%- include("./partials/header") %>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        User Register
                    </div>
                    <div class="card-body">
            
                        <form action="/register" method="POST">
                                    <div class="mb-3">
                                        <label for="name" class="form-label">Name</label>
                                        <input type="text" class="form-control" id="name" name="name" required placeholder="Jhon doe">
                                    </div>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" required placeholder="example@hotmail.com">
                                    </div>
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="password" name="password" required placeholder="At least 6 character">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Register</button>
                                    <p class="mt-2">Already a user ? <a href="/login">Login here</a></p>
                                </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include("./partials/footer") %>