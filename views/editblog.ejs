<%- include("./partials/header") %>
<div class="container mt-5">
    <h3>Edit Blog </h3>
    <form action="/edit/<%= editdata._id %>" method="post">
        <input type="text" class="form-control" name="title" value=" <%= editdata.title %>">
        <textarea name="content" id="" cols="30" rows="10" class="mt-3 form-control"><%= editdata.content %></textarea>
        <button type="submit" class="btn btn-primary mt-4">Save Changes</button>
        <a href="/myblogs" class="btn btn-danger mt-4">Cancel</a>

    </form>
</div>
